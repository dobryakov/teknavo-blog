
<div class="page-header">
  <h1>
    Articles
  </h1>
</div>

<div class="col-lg-12">
  <section class="box ">
    <div class="content-body">
      <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
          <ul id="articles">
            <% @articles.each{|article| %>

                <%= render :partial => 'shared/article', :locals => { :article => article } %>

            <% } %>
          </ul>

          <% if user_signed_in? %>
              <%= form_for(Article.new, remote: true, html: {class: ''}, id: 'new_article') do |f| %>
                  <%= f.text_area :body, :class => 'form-control', :autocomplete => 'off' %>
                  <%= f.submit 'Send!', :class => 'btn btn-success' %>
              <% end %>
          <% end %>

        </div>

      </div>
    </div>
  </section>
</div>
